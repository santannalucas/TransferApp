<h1>Account <%= @account.number %></h1>

<h2> Transfers</h2>

    <table class="mableTable">
      <tr><th style="text-align: left">From</th><th style="text-align: left">To</th><th>Amount</th></tr>
      <tr><td style="text-align: left" colspan="2">Initial Balance </td><td><%= @account.initial_balance %></td></tr>
      <% @transfers.each do |transfer| %>
        <tr>
          <td style="text-align: left"><%= link_to transfer.from_account.number, account_path(id:transfer.from_account_id) %></td>
          <td style="text-align: left"><%= link_to transfer.to_account.number, account_path(id:transfer.to_account_id) %></td>
          <td><%= '- ' if transfer.from_account == @account %> <%= transfer.amount %></td>
        </tr>
      <% end %>
      <tr><td style="text-align: left" colspan="2">Final Balance </td><td><b><%= @account.balance %></b></td></tr>
    </table>

<br>

<%= link_to 'Back to Accounts', accounts_path %>
